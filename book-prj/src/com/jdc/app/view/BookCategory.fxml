<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox styleClass="view" stylesheets="@common.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jdc.app.view.BookCategory">
   <children>
      <HBox styleClass="search_bar">
         <children>
            <TextField fx:id="name" promptText="Enter Category Name" styleClass="txt-fld">
               <font>
                  <Font size="13.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#add" styleClass="btn" text="ADD">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#upload" styleClass="btn" text="UPLOAD">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#search" styleClass="btn" text="SEARCH">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#clear" styleClass="btn" text="CLEAR">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" styleClass="scrollPane" VBox.vgrow="ALWAYS">
        <content>
            <FlowPane fx:id="catBoxHolder" />
        </content>
      </ScrollPane>
   </children>
</VBox>
